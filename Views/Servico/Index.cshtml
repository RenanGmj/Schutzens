<h1 class="mb-4">Lista de Servi√ßos</h1>
<ul class="list-group">
    @foreach(var obj in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <input type="checkbox" class="service-checkbox" data-id="@obj.ServicoID" data-price="@obj.PrecoBase" onclick="calculateTotal()">
            <span class="w-25 text-truncate"><strong></strong> @obj.Nome</span>  
            <span class="w-50 text-truncate"><strong></strong> @obj.Descricao</span>
            <span class="w-25 text-truncate"><strong></strong> R$@obj.PrecoBase</span>
        </li>
    }
</ul>

<h3 class="mt-4">Total: R$ <span id="totalPrice">0.00</span></h3>

<button id="agendarBtn" class="btn btn-primary mt-4">Agendar</button>

<script src="~/js/site.js"></script>
