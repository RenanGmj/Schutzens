@model IEnumerable<Schutzens.Models.Produto>

<div class="container">
    <div class="row">
        @foreach(var item in Model){
            <div  class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@Url.Content(@item.ImagemProduto)" alt="" class="img-fluid" width="500px" height="800px"></p>
                <h4>@item.ProdutoNome</h4>
                <p>@item.DescricaoProduto</p>
                <h3> @item.PrecoProduto.ToString("c")</h3>
            </div>
        }
    </div>
</div>        